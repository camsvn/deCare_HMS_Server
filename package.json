{
  "name": "decare_hms",
  "version": "1.0.0",
  "description": "DeCare HMS Photo Upload Server",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project ./tsconfig.json",
    "build:release": "webpack --mode production",
    "start": "SET NODE_ENV=production & node dist",
    "dev:server": "SET `NODE_ENV`=development & nodemon dist",
    "compile:watch": "tsc --project ./tsconfig.json --watch",
    "dev": "concurrently \"npm:dev:server\" \"npm:compile:watch\"",
    "zip:pwsh": "pwsh.exe -Command \"Compress-Archive -Path .\\release, .\\package.json, .\\package-lock.json, .\\.env.template, .\\views, .\\public -DestinationPath .\\bundle.zip -Force\"",
    "bundle:release": "npm run build:release && npm run zip:pwsh"
  },
  "author": "Amal Salvin Joseph",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.3.3",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.4",
    "node-cron": "^3.0.0",
    "sequelize": "5.22.4",
    "tedious": "^11.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-status-monitor": "^1.2.4",
    "@types/node": "^16.4.13",
    "@types/bluebird": "^3.5.36",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/multer": "^1.4.7",
    "@types/node-cron": "^2.0.4",
    "@types/validator": "^13.6.3",
    "concurrently": "^6.2.1",
    "dotenv-webpack": "^8.0.1",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.2.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
